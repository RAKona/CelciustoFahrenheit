<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#D3D0DF"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/valueET"
        android:inputType="number"
        android:layout_width="match_parent"
        android:hint="Enter The Value"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content">

</EditText>

    <Button
        android:id="@+id/convertBtn"
        android:layout_width="match_parent"
        android:layout_margin="50dp"
        android:layout_gravity="center"
        android:text="Convert"
        android:background="#CEA6D5"
        android:textAllCaps="false"
        android:layout_height="wrap_content">


    </Button>


    <TextView

        android:id="@+id/resultTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#000">

    </TextView>

    <RelativeLayout
        android:layout_marginTop="30dp"
      android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/itscoldIV"
            android:layout_width="200dp"
            android:visibility="gone"
            android:src="@drawable/its_cold"
            android:layout_height="200dp">
        </ImageView>


        <ImageView
            android:id="@+id/itshotIV"
            android:layout_width="200dp"
            android:visibility="gone"
            android:src="@drawable/itshot2"
            android:layout_height="200dp">
        </ImageView>

        <ImageView
            android:id="@+id/itstoohotIV"
            android:layout_width="200dp"
            android:visibility="gone"
            android:src="@drawable/its_hot"
            android:layout_height="200dp">
        </ImageView>



    </RelativeLayout>
</LinearLayout>